{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist/backend",
    "rootDir": "./src/backend",
    "module": "CommonJS",
    "moduleResolution": "node",
    "target": "ES2022",
    "lib": ["ES2022"],
    "types": ["node", "jest"]
  },
  "include": [
    "src/backend/**/*",
    "src/shared/**/*",
    "src/agents/**/*"
  ],
  "exclude": [
    "src/frontend/**/*",
    "node_modules",
    "dist",
    "coverage",
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}